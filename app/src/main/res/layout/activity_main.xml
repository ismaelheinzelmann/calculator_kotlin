<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:backgroundTint="@color/black">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/input"
        android:layout_height="360dp"
        android:background="#efefef"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="48sp"
        android:gravity="right|bottom"
        android:backgroundTint="@color/black"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"

        >
        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="7"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="8"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="9"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="/"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"

        >
        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="4"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="5"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="6"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="x"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"

        >
        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="1"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="2"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="3"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="-"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="0" />
            <Button
                android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/CLR"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="CLR" />
            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="+" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black">
        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="="
            />

    </LinearLayout>



</LinearLayout>